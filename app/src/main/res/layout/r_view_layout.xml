<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_dark"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp"
    tools:ignore="MissingConstraints"
    >

    <ImageView
        android:id="@+id/imageview_item"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar1"
        android:background="@drawable/image_round_mask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="علی بهرامی"
        android:textColor="@color/textPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageview_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_item">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="درباره"
            android:textColor="@color/textAccentDark"
            android:textSize="12sp"
            android:background="@drawable/bg_chip_dark"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخ"
            android:textColor="@color/textAccentDark"
            android:textSize="12sp"
            android:background="@drawable/bg_chip_dark"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="زمان"
            android:textColor="@color/textAccentDark"
            android:textSize="12sp"
            android:background="@drawable/bg_chip_dark"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_progress_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لودینگ"
            android:textColor="@color/textAccentDark"
            android:textSize="12sp"
            android:background="@drawable/bg_chip_dark"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>